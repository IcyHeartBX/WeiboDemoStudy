<?xml version="1.0" encoding="utf-8"?>
<com.pix.weibohomedemo.widget.EnableChildSlideFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:background="#24242e"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.pix.weibohomedemo.widget.LoopViewPager
            android:id="@+id/pager_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:clipChildren="false"
            android:paddingBottom="0dip"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_dot_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" />

</com.pix.weibohomedemo.widget.EnableChildSlideFrameLayout>